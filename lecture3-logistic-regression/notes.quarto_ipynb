        "            sm.train()\n",
        "    \n",
        "    def eval(self):\n",
        "        self.eval = True\n",
        "        for sm in self._submodules.values():\n",
        "            sm.eval()\n",
        "\n",
        "    def store(self):\n",
        "        self.store = True\n",
        "        for sm in self._submodules.values():\n",
